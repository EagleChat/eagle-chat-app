<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                tools:context="eaglechat.eaglechat.UsbTestActivity">
    <TextView
        android:text="This app demonstrates the ability to communicate with the EagleChat hardware.\n\nEnter some text in the box below and press write to store it."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/board_input"
            android:singleLine="true"
            android:maxLength="31"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/board_write"
            android:text="Write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>
    <TextView
        android:text="Press the READ button to read the text back from the peripheral."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/board_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/board_read"
            android:text="Read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </LinearLayout>


    <TextView
        android:text="EagleChat board says:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/board_log"
        android:text="@string/hello_world"
        android:typeface="monospace"
        android:layout_width="match_parent"
        android:layout_height="54sp"/>

</LinearLayout>
